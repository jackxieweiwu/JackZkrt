<resources>

    <style name="FpvGenSettingEtview">
        <item name="android:layout_width">@dimen/fpv_et_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@drawable/selector_edittext_bg</item>
        <item name="android:padding">@dimen/view_top_min_margin</item>
        <item name="android:layout_marginLeft">@dimen/view_top_mid_margin</item>
    </style>
    <style name="GenCenterTxt" parent="@style/GenTxt">
        <item name="android:gravity">center</item>
    </style>
    <style name="GenCenterWrapTxt" parent="@style/GenCenterTxt">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="GenTxt">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:ellipsize">middle</item>
    </style>
    <style name="camera_exposure_settings_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style mce_bogus="1" name="dialogWindowAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="widget_battery_voltage_bg">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_between_small_tiny</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@drawable/battery_voltage_bg_normal</item>
    </style>
</resources>