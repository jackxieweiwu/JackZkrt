<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dip"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="@dimen/activity_magin_10">

    <Button
        android:id="@+id/switch_power_threed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电源"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"/>

    <Button
        android:id="@+id/switch_threed_camera"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/activity_magin_3"
        android:layout_marginRight="@dimen/activity_magin_3"
        android:layout_height="wrap_content"
        android:text="摄像头"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_magin_3"
        android:textColor="@color/white"
        android:text="拍照:"/>
    <Switch
        android:id="@+id/switch_threed"
        android:layout_width="55dip"
        android:layout_marginLeft="@dimen/activity_magin_3"
        android:layout_height="28dip"
        android:textColor="@color/white"
        android:thumb="@mipmap/fpv_switch_ball"
        android:background="@mipmap/fpv_switch_bg"/>
</LinearLayout>