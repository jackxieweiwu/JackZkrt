<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="350dip"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_height="280dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_magin_20"
        android:textSize="18sp"
        android:text="避温参数设置"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上限温度值(℃)："/>

        <EditText
            android:id="@+id/edit_temp_up"
            android:layout_width="200dip"
            android:digits="1234567890"
            android:singleLine="true"
            android:maxLength="3"
            android:inputType="number"
            android:layout_height="45dip"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下限温度值(℃)："/>

        <EditText
            android:id="@+id/edit_temp_down"
            android:layout_width="200dip"
            android:digits="-1234567890"
            android:maxLength="3"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:layout_height="45dip"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_pk_temp"
        android:layout_marginTop="@dimen/activity_magin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/alt_change_bg"/>
</LinearLayout>