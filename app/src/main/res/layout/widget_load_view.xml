<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:alpha="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_logo"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="12%w"
        android:layout_marginBottom="60dip"
        android:layout_gravity="center"
        android:src="@mipmap/logo"/>

    <TextView
        android:id="@+id/txt_name_one"
        android:alpha="0"
        app:layout_heightPercent="9%w"
        android:layout_marginBottom="60dip"
        app:layout_widthPercent="9%w"
        style="@style/TextViewStyle"
        android:text="@string/app_name_one"/>

    <TextView
        android:id="@+id/txt_name_two"
        android:alpha="0"
        app:layout_heightPercent="9%w"
        app:layout_widthPercent="9%w"
        android:layout_marginBottom="60dip"
        style="@style/TextViewStyle"
        android:text="@string/app_name_two"/>

    <TextView
        android:id="@+id/txt_name_three"
        android:alpha="0"
        android:layout_marginBottom="60dip"
        app:layout_heightPercent="9%w"
        app:layout_widthPercent="9%w"
        style="@style/TextViewStyle"
        android:text="@string/app_name_three"/>

    <TextView
        android:id="@+id/txt_name_four"
        android:alpha="0"
        android:layout_marginBottom="60dip"
        app:layout_heightPercent="9%w"
        app:layout_widthPercent="9%w"
        style="@style/TextViewStyle"
        android:text="@string/app_name_four"/>
</com.zhy.android.percent.support.PercentLinearLayout>