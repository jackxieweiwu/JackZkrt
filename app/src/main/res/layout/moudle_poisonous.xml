<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="370dip"
    android:gravity="center"
    android:padding="@dimen/activity_magin_10"
    android:layout_gravity="center"
    android:layout_height="290dip">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_magin_20"
        android:textSize="18sp"
        android:gravity="center"
        android:text="气体检测参数设置"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_pois_co"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="CO:"/>

        <EditText
            android:id="@+id/edit_pois_co"
            android:layout_toRightOf="@+id/txt_pois_co"
            android:gravity="center"
            android:inputType="number"
            android:digits="1234567890"
            android:maxLength="3"
            android:singleLine="true"
            android:layout_width="100dip"
            android:layout_height="45dip" />

        <TextView
            android:id="@+id/txt_pois_h2s"
            android:layout_toRightOf="@+id/edit_pois_co"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="H2S:"/>

        <EditText
            android:id="@+id/edit_pois_h2s"
            android:layout_toRightOf="@+id/txt_pois_h2s"
            android:gravity="center"
            android:inputType="numberSigned"
            android:digits="1234567890"
            android:maxLength="3"
            android:singleLine="true"
            android:layout_width="100dip"
            android:layout_height="45dip" />

        <TextView
            android:id="@+id/txt_pois_nh3"
            android:layout_below="@+id/edit_pois_co"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="NH3:"/>

        <EditText
            android:id="@+id/edit_pois_nh3"
            android:gravity="center"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:digits="1234567890"
            android:maxLength="3"
            android:layout_below="@+id/edit_pois_co"
            android:layout_toRightOf="@+id/txt_pois_nh3"
            android:layout_width="100dip"
            android:layout_height="45dip" />

        <TextView
            android:id="@+id/txt_pois_co2"
            android:layout_below="@+id/edit_pois_co"
            android:layout_toRightOf="@+id/edit_pois_nh3"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="CO2:"/>

        <EditText
            android:id="@+id/edit_pois_co2"
            android:gravity="center"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:digits="1234567890"
            android:maxLength="4"
            android:layout_below="@+id/edit_pois_co"
            android:layout_toRightOf="@+id/txt_pois_co2"
            android:layout_width="100dip"
            android:layout_height="45dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_pois"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip">

        <TextView
            android:id="@+id/txt_pois_cl2"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="CL2:"/>

        <EditText
            android:id="@+id/edit_pois_cl2"
            android:gravity="center"
            android:inputType="numberSigned"
            android:digits="1234567890"
            android:maxLength="3"
            android:singleLine="true"
            android:layout_toRightOf="@+id/txt_pois_cl2"
            android:layout_width="100dip"
            android:layout_height="45dip" />

        <TextView
            android:id="@+id/txt_pois_SO2"
            android:layout_toRightOf="@+id/edit_pois_cl2"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="SO2:"/>

        <EditText
            android:id="@+id/edit_pois_SO2"
            android:gravity="center"
            android:inputType="numberSigned"
            android:digits="1234567890"
            android:singleLine="true"
            android:maxLength="3"
            android:layout_toRightOf="@+id/txt_pois_SO2"
            android:layout_width="100dip"
            android:layout_height="45dip" />

        <TextView
            android:id="@+id/txt_pois_voc"
            android:layout_below="@+id/txt_pois_SO2"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="VOC:"/>

        <EditText
            android:id="@+id/edit_pois_voc"
            android:gravity="center"
            android:inputType="numberSigned"
            android:digits="1234567890"
            android:singleLine="true"
            android:maxLength="3"
            android:layout_below="@+id/edit_pois_SO2"
            android:layout_toRightOf="@+id/txt_pois_voc"
            android:layout_width="100dip"
            android:layout_height="45dip" />

        <TextView
            android:id="@+id/txt_pois_ch4"
            android:layout_below="@+id/txt_pois_SO2"
            android:layout_toRightOf="@+id/edit_pois_voc"
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="CH4:"/>

        <EditText
            android:id="@+id/edit_pois_ch4"
            android:gravity="center"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:maxLength="3"
            android:layout_below="@+id/edit_pois_SO2"
            android:digits="1234567890"
            android:layout_toRightOf="@+id/txt_pois_ch4"
            android:layout_width="100dip"
            android:layout_height="45dip" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_pk_gas"
        android:layout_marginTop="@dimen/activity_magin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/alt_change_bg"/>
</LinearLayout>
