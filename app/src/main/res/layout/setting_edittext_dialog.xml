<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dip"
    android:layout_gravity="center"
    android:padding="25dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_edit_name"
        android:textColor="@color/back_150"
        android:text="设置返航高度"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_magin_20"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_xianzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="asdasdad:"/>

        <EditText
            android:layout_marginLeft="@dimen/activity_magin_5"
            android:id="@+id/setting_edit_edittxt"
            android:layout_width="130dip"
            android:digits="1234567890."
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_setting_btn"
        android:layout_marginTop="@dimen/activity_magin_10"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/alt_change_bg"/>
</LinearLayout>