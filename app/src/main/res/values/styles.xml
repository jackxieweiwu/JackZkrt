<resources>

    <style name="appThemeStyle" parent="Theme.AppCompat.DayNight.NoActionBar"/>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="appThemeStyle">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style  name="TextViewStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:width">0dip</item>
        <item name="android:layout_marginLeft">-10dip</item>
        <item name="android:height">0dip</item>
    </style>

    <!--fragment_mount style-->
    <style name="largeTelemetryText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="unitText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="textLabels">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
